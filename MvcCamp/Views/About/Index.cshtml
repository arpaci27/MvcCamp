@using EntityLayer.Concrete
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Hakkımda Veri Listesi</h1>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hakkımızda Başlığı</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>Başlık</td>
            <td><a href="#"class="btn btn-warning">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-danger">Pasif Yap</a></td>

        </tr>
    }
</table>


<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Yeni Hakkımızda Yazı Girişi</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Hakkımızda Metin Girişi</h2>
            </div><form method="post" action="/About/AddAbout/">
            <div class="modal-body">
                
                    <label for="text1">Hakkımızda Metin 1</label>
                    <input type="text" name="AboutDetails1" class="form-control" /><br />
                    <label for="text2">Hakkımızda Metin 2</label>
                    <input type="text" name="AboutDetails2" class="form-control" /><br />
                    <label for="text3">Hakkımızda Görsel 1</label>
                    <input type="text" name="AboutImage1" class="form-control" /><br />
                    <label for="text4">Hakkımızda Görsel 1</label>
                    <input type="text" name="AboutImage2" class="form-control" /><br />
                    <button class="btn btn-info" >Kaydet</button>

                </div>
            </form>
        </div>
    </div>
</div>

