@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewData["Title"] = "MyHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@{
    string color = "";
    string colorStatus = "";
}


<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Başlıklar</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>

                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 30%">
                                Oluşturan Yazar
                            </th>
                            
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.HeadingStatus == true)
                            {
                                colorStatus = "success";
                            }
                            else if (item.HeadingStatus == false)
                            {
                                colorStatus = "danger";
                            }
                            else
                            {
                                colorStatus = "default"; // Handle other possible cases like null
                            }

                            switch (item.Category.CategoryName)
                            {
                                case "Eğitim":
                                    color = "badge badge-primary";
                                    break;
                                case "Tiyatro":
                                    color = "badge badge-warning";
                                    break;
                                case "Kitap":
                                    color = "badge badge-secondary";
                                    break;
                                case "Spor":
                                    color = "badge badge-success";
                                    break;
                                case "Film":
                                    color = "badge badge-danger";
                                    break;
                                case "Günlük Hayat":
                                    color = "badge badge-info";
                                    break;
                                case "Off Topic":
                                    color = "badge badge-dark";
                                    break;
                                case "Sosyal Medya":
                                    color = "badge badge-light";
                                    break;
                                case "Yazılım":
                                    color = "badge badge-info";
                                    break;
                                case "Seyahat":
                                    color = "badge badge-warning";
                                    break;
                                default:
                                    color = "badge badge-default"; // default color for unspecified categories
                                    break;
                            }
                            <tr>
                                <td>
                                    @item.HeadingID
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                        </li>
                                    </ul>
                                </td>
                                
                                <td class="project-state">
                                    <span class="badge badge-@color">@item.Category.CategoryName</span>
                                </td>

                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/WriterPanel/EditHeading/@item.HeadingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@item.HeadingID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>


<a href="/Heading/AddHeading/" class="btn btn-info">Yeni Başlık Ekle</a>
<br />


