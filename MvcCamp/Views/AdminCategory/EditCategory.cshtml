@model EntityLayer.Concrete.Category    
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1>Kategori Güncelleme Sayfası</h1>

   @using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori ID")
        @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control", @readonly = "readonly" })
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
        <br /><br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
        <br /><br />
        <button id="kaydet" class="btn btn-primary">Güncelle</button>
    </div>
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.getElementById("kaydet").addEventListener("click", function (event) {
        event.preventDefault(); // Bu satır, formun otomatik olarak submit edilmesini engeller

        Swal.fire({
            title: 'Tebrikler!',
            text: 'Kategori başarıyla güncellendi.',
            icon: 'success',
            confirmButtonText: 'İlerle'
        }).then((result) => {
            if (result.isConfirmed) {
                // Formu submit edin
                document.forms[0].submit();
            }
        });
    });
</script>
