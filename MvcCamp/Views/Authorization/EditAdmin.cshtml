    @model EntityLayer.Concrete.Admin
@{
    ViewData["Title"] = "EditAdmin";        
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1>Admin Güncelleme Sayfası</h1>

@using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.AdminID, new { @class = "form-control", @readonly = "readonly" })
        @Html.Label("Admin Kullanıcı Adı")
        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Parolayı Yazınız")
        @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Rolü Seçiniz")
        @Html.DropDownListFor(x => x.AdminRole, (IEnumerable<SelectListItem>)ViewBag.Roles, new { @class = "form-control" })
        <br /><br />
        <button id="kaydet" class="btn btn-primary">Güncelle</button>
    </div>
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.getElementById("kaydet").addEventListener("click", function (event) {
        event.preventDefault(); // Bu satır, formun otomatik olarak submit edilmesini engeller

        Swal.fire({
            title: 'Tebrikler!',
            text: 'Admin Bilgileri Başarıyla Güncellendi.',
            icon: 'success',
            confirmButtonText: 'İlerle'
        }).then((result) => {
            if (result.isConfirmed) {
                // Formu submit edin
                document.forms[0].submit();
            }
        });
    });
</script>